{
    "name": "hunde-sitting-test",
    "type": "module",
    "version": "0.0.0",
    "private": true,
    "packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808",
    "license": "UNLICENSED",
    "scripts": {
        "build": "node ace build",
        "dev": "concurrently \"node ace serve --hmr\" \"pnpm prettier-watch\"",
        "format": "prettier --write resources/**/*.edge",
        "lint": "eslint .",
        "prettier-watch": "onchange \"**/*.edge\" -- prettier --write {{file}}",
        "start": "node bin/server.js",
        "test": "node ace test",
        "typecheck": "tsc --noEmit"
    },
    "imports": {
        "#controllers/*": "./app/controllers/*.js",
        "#exceptions/*": "./app/exceptions/*.js",
        "#models/*": "./app/models/*.js",
        "#mails/*": "./app/mails/*.js",
        "#services/*": "./app/services/*.js",
        "#listeners/*": "./app/listeners/*.js",
        "#events/*": "./app/events/*.js",
        "#middleware/*": "./app/middleware/*.js",
        "#validators/*": "./app/validators/*.js",
        "#providers/*": "./providers/*.js",
        "#policies/*": "./app/policies/*.js",
        "#abilities/*": "./app/abilities/*.js",
        "#database/*": "./database/*.js",
        "#tests/*": "./tests/*.js",
        "#start/*": "./start/*.js",
        "#config/*": "./config/*.js"
    },
    "dependencies": {
        "@adonisjs/auth": "^9.3.1",
        "@adonisjs/core": "^6.17.2",
        "@adonisjs/lucid": "^21.6.0",
        "@adonisjs/session": "^7.5.1",
        "@adonisjs/shield": "^8.1.2",
        "@adonisjs/static": "^1.1.1",
        "@adonisjs/vite": "^4.0.0",
        "@vinejs/vine": "^3.0.0",
        "edge.js": "^6.2.1",
        "luxon": "^3.6.1",
        "pg": "^8.14.1",
        "reflect-metadata": "^0.2.2"
    },
    "devDependencies": {
        "@adonisjs/assembler": "^7.8.2",
        "@adonisjs/eslint-plugin": "^1.3.0",
        "@adonisjs/tsconfig": "^1.4.0",
        "@antfu/eslint-config": "^4.11.0",
        "@japa/assert": "^4.0.1",
        "@japa/plugin-adonisjs": "^4.0.0",
        "@japa/runner": "^4.2.0",
        "@swc/core": "1.10.7",
        "@types/luxon": "^3.6.2",
        "@types/node": "^22.13.2",
        "concurrently": "^9.1.2",
        "eslint": "^9.20.1",
        "eslint-plugin-format": "^1.0.1",
        "hot-hook": "^0.4.0",
        "onchange": "^7.1.0",
        "pino-pretty": "^13.0.0",
        "prettier": "^3.5.0",
        "prettier-plugin-edgejs": "^1.0.0",
        "ts-node-maintained": "^10.9.5",
        "typescript": "~5.7",
        "vite": "^6.1.0"
    },
    "hotHook": {
        "boundaries": [
            "./app/controllers/**/*.ts",
            "./app/middleware/*.ts"
        ]
    },
    "prettier": {
        "plugins": [
            "prettier-plugin-edgejs"
        ],
        "printWidth": 100,
        "tabWidth": 4
    }
}
