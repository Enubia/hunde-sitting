{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "baseUrl": ".",
        "rootDir": "./src",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "paths": {
            "#lib/*": ["./src/lib/*"]
        },
        "resolveJsonModule": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "verbatimModuleSyntax": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/lib/db/migrations/*.ts",
        "src/lib/db/seeds/*.ts"
    ]
}
