{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedSideEffectImports": true,
        "declaration": true,
        "outDir": "dist"
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.vue"]
}
